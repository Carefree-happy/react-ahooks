{
    "compilerOptions": {
        "lib": ["ES2017", "DOM", "ESNext"],
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES2020",
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/**/*"
    ]
}